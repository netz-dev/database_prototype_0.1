<%= simple_form_for(@client_company) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company_name %>
    <%= f.input :street_address %>
    <%= f.input :state %>
    <%= f.input :postal_code %>
    <%= f.input :city %>
    <%= f.country_select :country %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
