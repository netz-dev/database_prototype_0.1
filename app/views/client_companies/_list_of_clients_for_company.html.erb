<p class="lead">
  Clients Linked to this Company
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Branch location</th>
    </tr>
  </thead>

  <tbody>
    <% @company_clients.each do |client| %>
      <tr>
        <td>
          <%= link_to 'View', client, class: "btn btn-sm btn-outline-primary" %>
        </td>
        <td>
          <%= client.title %>
        </td>
        <td>
          <%= client.first_name %>
        </td>
        <td>
          <%= client.last_name %>
        </td>
        <td>
          <%= client.email %>
        </td>
        <td>
          <%= client.branch_location %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
