<div class="container-fluid">
  <div class="row">
    <div style="min-width: 100%; background-color: white; margin-left: -15px;">
      <h3 style="padding: 20px;">Prospects Database</h3>
    </div>
  </div>
</div>
<div class="container-fluid">
  <%= render partial: "layouts/shared/flash_messages", flash: flash %>
</div>

<div class="container-fluid">
  <div class="row">
    <%= link_to 'New Prospect', new_prospect_path, class: "btn btn-outline-secondary", style: "width: 180px;" %> <%= link_to 'New Company', new_client_company_path, class: "btn btn-outline-secondary", style: "margin-left: 20px; width: 180px;" %> <%= link_to 'Add Characteristic', new_client_company_path, class: "btn btn-outline-secondary", style: "margin-left: 20px; width: 180px;" %>
  </div>
</div>

<div class="container-fluid">
  <div class="row" style="margin-top: 30px;">
    <div class="card table-responsive" style="padding: 20px; margin-right: 15px;">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Type</th>
            <th>Status</th>
            <th>Client</th>
            <th>Company</th>
            <th>Campaign</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Location</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <tbody>
          <% @prospects.each do |prospect| %>
            <tr>
              <td><%= prospect.prospect_type %></td>
              <td><%= prospect.prospect_status %></td>
              <td><%= prospect.client.first_name %> <%= prospect.client.first_name %></td>
              <td><%= prospect.client.client_company.company_name %></td>
              <td><%= prospect.campaign.campaign_reference %></td>
              <td><%= prospect.first_name %></td>
              <td><%= prospect.last_name %></td>
              <td><%= prospect.email %></td>
              <!-- <td><%= prospect.phone_number %></td> -->
              <!-- <td><%= prospect.mobile_number %></td> -->
              <td><%= prospect.branch_location %></td>
              <td><%= link_to 'Show', prospect %></td>
              <!-- <td><%= link_to 'Edit', edit_prospect_path(prospect) %></td> -->
              <!-- <td><%= link_to 'Destroy', prospect, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
